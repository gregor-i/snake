{
  "devDependencies": {
    "http-server": "^0.12.3",
    "image-clipper": "^0.4.4",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "develop": "npm run mkdir && run-p server watch",
    "mkdir": "mkdir -p build",
    "server": "http-server -c-1 build",
    "build": "run-p build-*",
    "build-html": "cp src/main/html/* build/.",
    "build-img": "cp src/main/img/* build/.",
    "build-js": "sbt compile",
    "watch": "run-p watch-*",
    "watch-html": "nodemon --exec 'npm run build-html' --watch src/main/html -e html",
    "watch-img": "nodemon --exec 'npm run build-img' --watch src/main/html -e '*'",
    "watch-js": "sbt ~compile"
  },
  "dependencies": {}
}
